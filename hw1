import java.util.Scanner;

public class temp{
    public static void main(String[] args) {
        new Monkey(new Scanner(System.in).nextLine()).speak();
        new People(new Scanner(System.in).nextLine()).speak();
    }
}


class Monkey{
    protected String name;

    public Monkey(String name) {
        this.name = name;
    }

    public void speak(){
        System.out.println("I am Monkey " + name);
        System.out.println("YiYiYaYa......");
    }

}

class People extends Monkey{
    public People(String name) {
        super(name);
    }

    @Override
    public void speak() {
        System.out.println("I am People " + super.name);
        System.out.println("Hey you~~, not bad! You can speak!");
        System.out.println("Stop talking! Think seriously!");
    }
}

////////////////////////////
class Vehicle{
    protected int wheels;
    protected double weight;

    public Vehicle(int wheels, double weight) {
        this.wheels = wheels;
        this.weight = weight;
    }
}
class Car extends Vehicle{
    protected int loader;
    protected final int maxLoader=5;

    public Car(int wheels, double weight, int loader) {
        super(wheels, weight);
        this.loader = loader;
    }

    public void isLoader(){
        if (loader <= maxLoader) {
            System.out.printf("此Car对象搭载了 %d 名乘客!\n", loader);
        } else {
            System.out.println("此Car对象超载!");
        }
    }
    public void print(){
        System.out.printf("车轮个数为: %d, 车重为: %.1f\n", wheels, weight);
        isLoader();
    }

}
class Truck extends Car{
    private double payload;
    private final int maxloader=2;
    private final double maxpayload=1000;
    public Truck(int wheels, double weight, int loader, double payload) {
        super(wheels, weight, loader);
        this.payload = payload;
    }

    @Override
    public void isLoader() {
        if (super.loader <= this.maxLoader) {
            System.out.printf("此Truck对象搭载了 %d 名乘客!\n", super.loader);
        } else {
            System.out.println("此Truck对象超载!");
        }
    }

    @Override
    public void print() {
        
    }
}
